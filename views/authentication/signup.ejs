<div class="form-group col-sm-6 col-md-4 col-md-offset-4">
  <h3>Sign Up for Banned</h3>
</div>

<% if (message.length > 0) { %>
  <div class="alert alert-danger"><%= message %></div>
<% } %>

<form method="post" action="/signup">
  <div class="form-group form-group col-sm-6 col-md-4 col-md-offset-4">
    <label for="email">Email</label>
    <input class="form-control" type="text" name="email" id="email">
  </div>

  <div class="form-group col-sm-6 col-md-4 col-md-offset-4">
    <label for="email">Username</label>
    <input class="form-control" type="text" name="userName" id="userName">
  </div>

  <div class="form-group col-sm-6 col-md-4 col-md-offset-4">
    <label for="email">First Name</label>
    <input class="form-control" type="text" name="firstName" id="firstName">
  </div>

  <div class="form-group col-sm-6 col-md-4 col-md-offset-4">
    <label for="email">Last Name</label>
    <input class="form-control" type="text" name="lastName" id="lastName">
  </div>

  <div class="form-group col-sm-6 col-md-4 col-md-offset-4">
    <label for="email">Password</label>
    <input class="form-control" type="password" name="password" id="password">
  </div>
<div class="form-group col-sm-6 col-md-4 col-md-offset-4">
  <input class="btn btn-default btn-block" type="submit">
</div>
  <div class="form-group col-sm-6 col-md-4 col-md-offset-5"><h5>Already on Bannd? <a href="/login">Log In</a></h5>

  </div>
</form>
